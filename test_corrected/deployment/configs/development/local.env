# =============================================================================
# Development Environment Configuration
# =============================================================================
# This file contains development-specific environment variables
# These settings are optimized for local development and debugging

# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME="Integration System"
APP_VERSION=1.0.0-dev
APP_URL=http://localhost:3000

# Debug and Development Settings
DEBUG=integration:*
LOG_LEVEL=debug
LOG_FORMAT=dev
ENABLE_REQUEST_LOGGING=true
ENABLE_QUERY_LOGGING=true
ENABLE_DEBUG_ROUTES=true
ENABLE_HOT_RELOAD=true

# Security (Development Only - NOT for Production)
JWT_SECRET=development-jwt-secret-key-not-for-production
JWT_REFRESH_SECRET=development-refresh-secret-key-not-for-production
API_KEY_SECRET=development-api-key-secret
SESSION_SECRET=development-session-secret-key
ENCRYPTION_KEY=dev-encryption-key-32-chars-long

# Database Configuration (Docker Compose)
DATABASE_URL=postgresql://appuser:apppass@localhost:5432/appdb
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=appdb
DATABASE_USER=appuser
DATABASE_PASSWORD=apppass
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_TIMEOUT=30000
DATABASE_LOGGING=true

# Redis Configuration (Docker Compose)
REDIS_URL=redis://:redispass@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redispass
REDIS_DATABASE=0
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000

# Elasticsearch Configuration (Docker Compose)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX_PREFIX=integration_dev
ELASTICSEARCH_MAX_RETRIES=3
ELASTICSEARCH_REQUEST_TIMEOUT=30000

# File Storage (Local Development)
FILE_STORAGE_TYPE=local
FILE_STORAGE_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt
ENABLE_FILE_VIRUS_SCAN=false

# CORS Configuration (Permissive for Development)
ENABLE_CORS=true
CORS_ORIGIN=*
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-API-Key

# Rate Limiting (Relaxed for Development)
ENABLE_RATE_LIMITING=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESS=true

# Email Configuration (Development - Console Transport)
EMAIL_TRANSPORT=console
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=dev@integration-system.local
EMAIL_FROM_NAME=Integration System Dev

# Webhook Configuration (Development)
WEBHOOK_SECRET=dev-webhook-secret
WEBHOOK_TIMEOUT=30000
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=5000

# Authentication Settings
AUTH_JWT_EXPIRY=24h
AUTH_REFRESH_EXPIRY=7d
AUTH_MAX_SESSIONS=10
AUTH_PASSWORD_MIN_LENGTH=6
AUTH_ENABLE_2FA=false
AUTH_LOCKOUT_ATTEMPTS=10
AUTH_LOCKOUT_DURATION=900000

# Session Configuration
SESSION_COOKIE_NAME=integration.sid
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_MAX_AGE=86400000
SESSION_COOKIE_SAME_SITE=lax

# API Configuration
API_PREFIX=/api/v1
API_ENABLE_SWAGGER=true
API_SWAGGER_PATH=/api-docs
API_RATE_LIMIT_ENABLED=false
API_REQUEST_SIZE_LIMIT=10mb
API_TIMEOUT=30000

# Feature Flags (All Enabled for Development)
FEATURE_USER_REGISTRATION=true
FEATURE_SOCIAL_LOGIN=true
FEATURE_ADVANCED_SEARCH=true
FEATURE_FILE_UPLOAD=true
FEATURE_REAL_TIME_NOTIFICATIONS=true
FEATURE_ANALYTICS=true
FEATURE_WEBHOOKS=true
FEATURE_API_KEYS=true

# Monitoring and Observability
ENABLE_METRICS=true
METRICS_PORT=9090
METRICS_PATH=/metrics
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_PATH=/api/v1/health

# Tracing (Development)
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces
TRACING_SAMPLE_RATE=1.0
TRACE_SERVICE_NAME=integration-system-dev

# Development Tools
ENABLE_GRAPHQL_PLAYGROUND=true
GRAPHQL_PLAYGROUND_PATH=/graphql-playground
ENABLE_ADMIN_PANEL=true
ADMIN_PANEL_PATH=/admin

# Testing Configuration
TEST_DATABASE_URL=postgresql://testuser:testpass@localhost:5432/testdb
TEST_REDIS_URL=redis://:testpass@localhost:6380
TEST_TIMEOUT=30000
TEST_PARALLEL_JOBS=4

# Performance Settings (Development Optimized)
CACHE_TTL=300
CACHE_MAX_ITEMS=1000
CLUSTER_MODE=false
WORKER_PROCESSES=1
KEEP_ALIVE_TIMEOUT=65000
BODY_PARSER_LIMIT=10mb

# External Services (Development/Mock)
EXTERNAL_API_URL=http://localhost:3001/mock-api
EXTERNAL_API_KEY=mock-api-key
EXTERNAL_API_TIMEOUT=10000
EXTERNAL_API_RETRIES=3

# Development Database Seeding
DB_SEED_ON_START=true
DB_SEED_ADMIN_EMAIL=admin@integration-system.local
DB_SEED_ADMIN_PASSWORD=admin123
DB_SEED_SAMPLE_DATA=true

# Development Middleware
ENABLE_MORGAN_LOGGING=true
MORGAN_FORMAT=dev
ENABLE_HELMET=false
ENABLE_COMPRESSION=true

# WebSocket Configuration
ENABLE_WEBSOCKETS=true
WEBSOCKET_PORT=3001
WEBSOCKET_PATH=/socket.io
WEBSOCKET_CORS_ORIGIN=http://localhost:3000

# Development Notifications
NOTIFICATION_CHANNELS=console,websocket
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false

# Scheduler Configuration
ENABLE_SCHEDULER=true
SCHEDULER_TIMEZONE=America/New_York
SCHEDULER_MAX_JOBS=100

# Development Proxy Settings (if needed)
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# Development SSL (if testing HTTPS locally)
SSL_ENABLED=false
SSL_CERT_PATH=./certs/dev-cert.pem
SSL_KEY_PATH=./certs/dev-key.pem

# Hot Reload and Development Server
WATCH_FILES=true
WATCH_EXTENSIONS=js,ts,json
RESTART_ON_CHANGE=true
LIVE_RELOAD=true
LIVE_RELOAD_PORT=35729

# Development Memory Limits
MAX_MEMORY_USAGE=512MB
GC_THRESHOLD=0.8
HEAP_SIZE_LIMIT=512

# Development Error Handling
SHOW_STACK_TRACE=true
DETAILED_ERRORS=true
ERROR_REPORTING=console
CRASH_ON_UNHANDLED_REJECTION=false

# Documentation Generation
GENERATE_API_DOCS=true
API_DOCS_FORMAT=openapi
API_DOCS_OUTPUT=./docs/api

# Development Analytics
ANALYTICS_PROVIDER=console
ANALYTICS_TRACK_ERRORS=true
ANALYTICS_TRACK_PERFORMANCE=true

# Version Control Integration
GIT_COMMIT_HASH=development
GIT_BRANCH=development
BUILD_NUMBER=local
BUILD_DATE=local

# Development Flags
IS_DEVELOPMENT=true
IS_LOCAL=true
DEVELOPMENT_MODE=full